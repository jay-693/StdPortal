@model IEnumerable<StudentPortal.Models.SemwiseGradesDetails>

@if (Model != null && Model.Any())
{
    <table class="TablePartial2">
        <thead>
            <tr>
                <th>StudentId</th>
                <th>SNO</th>
                <th>Subject Code/Lab Code</th>
                <th>Subject Name/Lab Name</th>
                <th>Month&Year</th>
                <th>Final Grade</th>
                <th>Status</th>
                <th>Actions</th> <!-- New column for Edit/Remove -->
            </tr>
        </thead>
        <tbody>
            @foreach (var exam in Model)
            {
                <tr>
                    <td>@exam.StudentId</td>
                    <td>@exam.Sno</td>
                    <td>@exam.SubjectCodeLabCode</td>
                    <td>@exam.Subject</td>
                    <td>@exam.MonthAndYear</td>
                    <td>@exam.Grade</td>
                    <td>@exam.Status</td>
                    <td>
                        <!-- Edit and Remove buttons -->
                        <button onclick="editRecord(@exam.Id)" class="edit" style="padding:10px;border-radius:8px;margin-bottom:3px;background-color:coral;">Edit</button>
                        <button onclick="removeRecord(@exam.Id)" class="remove" style="padding:10px;border-radius:8px;margin-bottom:3px;background-color:coral;">Remove</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No grades available for this semester.</p>
}
