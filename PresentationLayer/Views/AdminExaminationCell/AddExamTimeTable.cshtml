@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model StudentPortal.Models.ExamTimeTable

@section adminaddexamtime {
    <style>
        .form-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            position: relative;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
            width: 100%;
            display: block;
            clear: both;
        }

        .form-group {
            margin-bottom: 15px;
            text-align: left;
        }

        .control-label {
            font-weight: bold;
            color: #444;
        }

        .form-control {
            border-radius: 4px;
            margin-left: -10px;
            padding: 10px;
            font-size: 16px;
            width: 100%;
            border: 1px solid #ccc;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.25);
                outline: none;
            }

        .btn {
            width: 100px;
            padding: 10px;
            font-size: 16px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .btn-secondary {
            background-color: red;
            border-color: #6c757d;
            color: white;
            text-decoration: none;
        }

            .btn-secondary:hover {
                background-color: darkred;
                border-color: darkred;
            }

        .text-danger {
            color: red;
            font-size: 14px;
        }
    </style>

    <div class="form-container">

        <h2>Add ExamTimeTable Data</h2>

        <form asp-controller="AdminExaminationCell" asp-action="AddExamTimeTable" method="post" class="form-horizontal">
            <div class="form-group">
                <label asp-for="StudentId" class="control-label">Student ID</label>
                <input asp-for="StudentId" class="form-control" placeholder="Enter Student ID" />
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sno" class="control-label">SNO</label>
                <input asp-for="Sno" class="form-control" placeholder="Enter Serial Number" />
                <span asp-validation-for="Sno" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SubjectCode" class="control-label">Subject Code/Lab Code</label>
                <input asp-for="SubjectCode" class="form-control" placeholder="Enter Code" />
                <span asp-validation-for="SubjectCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Subject" class="control-label">Subject Name/Lab Name</label>
                <input asp-for="Subject" class="form-control" placeholder="Enter Subject or Lab Name" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ExamDate" class="control-label">Exam Date</label>
                <input asp-for="ExamDate" type="date" class="form-control" placeholder="Enter Date" />
                <span asp-validation-for="ExamDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Timing" class="control-label">Timings</label>
                <input asp-for="Timing" class="form-control" placeholder="Enter Timings" />
                <span asp-validation-for="Timing" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Semester" class="control-label">Semester</label>
                <input asp-for="Semester" class="form-control" placeholder="Enter Semester" />
                <span asp-validation-for="Semester" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary" style="align-items:center;margin-left:120px;border-radius:10px;background-color:cornflowerblue">Submit</button>
                <a asp-action="AdminExamTimeTable" class="btn btn-secondary" style="text-decoration:none;border-radius:10px">Cancel</a>
            </div>
        </form>
    </div>
}
