@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

@section holiday {
    <div class="holiday-wrapper">
        <h1>List Of Holidays</h1>
        <p class="bread">You are here: <a asp-controller="Home" asp-action="RedirectToHome" style="text-decoration:none;color:#E437D2;">Academics</a>  >> List Of Holidays</p>
        <centre><h3>List of holidays 2024-2025</h3></centre>
        <table class="table">
            <thead>
                <tr>
                    <th>Month</th>
                    <th>Date</th>
                    <th>Day</th>
                    <th>Occasion</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var holiday in Model)
                {
                    <tr>
                        <td>@holiday.Month</td>
                        <td>@holiday.Date</td>
                        <td>@holiday.Day</td>
                        <td>@holiday.Occasion</td>
                    </tr>
                }
            </tbody>
        </table>
        <br />

        <!-- Pagination Links -->
        <div class="pagination" style="float:right; display:flex; gap:10px;">
            @if (ViewBag.CurrentPage > 1)
            {
                <a href="@Url.Action("Holidaylist", new { pageNumber = ViewBag.CurrentPage - 1 })"
                   class="btn btn-secondary pagination-btn pagination-arrow">
                    &lt; <!-- Left Arrow ( < ) -->
                </a>
           }

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <a href="@Url.Action("Holidaylist", new { pageNumber = i })"
                   class="btn btn-primary pagination-btn @(i == ViewBag.CurrentPage ? "active" : "")">@i</a>
            }

            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <a href="@Url.Action("Holidaylist", new { pageNumber = ViewBag.CurrentPage + 1 })"
                   class="btn btn-secondary pagination-btn pagination-arrow">
                    &gt; <!-- Right Arrow ( > ) -->
                </a>
           }
        </div>


        <br />
        <a href="@Url.Action("DownloadHolidaysPdf", "Home")" class="btn btn-primary" style="text-decoration:none">
            <button class="download-btn-holy">Download</button>
        </a>
    </div>
}
